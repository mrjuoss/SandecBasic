<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e3e3"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_wakatobi"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/wakatobi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/iv_wakatobi"
                        android:layout_centerHorizontal="true"
                        android:text="Wakatobi"
                        android:textColor="#f7f6f6"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/tv_wakatobi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_wakatobi"
                        android:layout_margin="16dp"
                        android:text="Wakatobi Island" />

                    <Button
                        android:id="@+id/btn_wakatobi"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_wakatobi"
                        android:text="PROMO 50% OFF"
                        android:onClick="gotoWakatobi"/>

                    <ImageView
                        android:id="@+id/iv_favorite_wakatobi"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tv_wakatobi"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_favorite_black_24dp" />

                    <ImageView
                        android:id="@+id/iv_share"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tv_wakatobi"
                        android:layout_margin="10dp"
                        android:layout_toLeftOf="@id/iv_favorite_wakatobi"
                        android:src="@drawable/ic_share_black_24dp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_bali"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/bali" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/iv_bali"
                        android:layout_centerHorizontal="true"
                        android:text="Bali"
                        android:textColor="#f7f6f6"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/tv_bali"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_bali"
                        android:layout_margin="16dp"
                        android:text="Bali Island" />

                    <Button
                        android:id="@+id/btn_bali"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_bali"
                        android:text="PAKET MURAH" />

                    <ImageView
                        android:id="@+id/iv_favorite_bali"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tv_bali"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_favorite_black_24dp" />

                    <ImageView
                        android:id="@+id/iv_share_bali"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tv_bali"
                        android:layout_margin="10dp"
                        android:layout_toLeftOf="@id/iv_favorite_bali"
                        android:src="@drawable/ic_share_black_24dp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_bromo"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/bromo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/iv_bromo"
                        android:layout_centerHorizontal="true"
                        android:text="Gunung Bromo"
                        android:textColor="#f7f6f6"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/tv_bromo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_bromo"
                        android:layout_margin="16dp"
                        android:text="Gunung Bromo" />

                    <Button
                        android:id="@+id/btn_bromo"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_bromo"
                        android:text="FLASH DEAL" />

                    <ImageView
                        android:id="@+id/iv_favorite_bromo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tv_bromo"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_favorite_black_24dp" />

                    <ImageView
                        android:id="@+id/iv_share_bromo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tv_bromo"
                        android:layout_margin="10dp"
                        android:layout_toLeftOf="@id/iv_favorite_bromo"
                        android:src="@drawable/ic_share_black_24dp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_toraja"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/toraja" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/iv_toraja"
                        android:layout_centerHorizontal="true"
                        android:text="Tanah Toraja"
                        android:textColor="#f7f6f6"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/tv_toraja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_toraja"
                        android:layout_margin="16dp"
                        android:text="Tanah Toraja" />

                    <Button
                        android:id="@+id/btn_toraja"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_toraja"
                        android:text="PAKET MURAH" />

                    <ImageView
                        android:id="@+id/iv_favorite_toraja"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tv_toraja"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_favorite_black_24dp" />

                    <ImageView
                        android:id="@+id/iv_share_toraja"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tv_toraja"
                        android:layout_margin="10dp"
                        android:layout_toLeftOf="@id/iv_favorite_toraja"
                        android:src="@drawable/ic_share_black_24dp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_toba"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/toba" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/iv_toba"
                        android:layout_centerHorizontal="true"
                        android:text="Danau Toba"
                        android:textColor="#f7f6f6"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/tv_toba"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_toba"
                        android:layout_margin="16dp"
                        android:text="Danau Toba" />

                    <Button
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_toba"
                        android:text="ACTION" />

                    <ImageView
                        android:id="@+id/iv_favorite_toba"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tv_toba"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_favorite_black_24dp" />

                    <ImageView
                        android:id="@+id/iv_share_toba"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tv_toba"
                        android:layout_margin="10dp"
                        android:layout_toLeftOf="@id/iv_favorite_toba"
                        android:src="@drawable/ic_share_black_24dp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>